import { useState } from "react";
import PropTypes from "prop-types";
import "./App.css"; // external CSS file

function ProfileCard({ name, role, location, bio, avatarUrl, skills, stats, links }) {
  const [following, setFollowing] = useState(false);

  return (
    <div className="card">
      <img className="avatar" src={avatarUrl} alt={name} />
      <h2>{name}</h2>
      <p className="role">{role}</p>
      <p className="location">üìç {location}</p>
      <p className="bio">{bio}</p>

      <div className="skills">
        {skills.map((s) => (
          <span key={s} className="chip">{s}</span>
        ))}
      </div>

      <div className="stats">
        <div>
          <strong>{stats.followers}</strong>
          <p>Followers</p>
        </div>
        <div>
          <strong>{stats.projects}</strong>
          <p>Projects</p>
        </div>
      </div>

      <button className="follow-btn" onClick={() => setFollowing(!following)}>
        {following ? "Following" : "Follow"}
      </button>

      <div className="links">
        {links.website && <a href={links.website}>üåê Website</a>}
        {links.github && <a href={links.github}>üíª GitHub</a>}
        {links.x && <a href={links.x}>X</a>}
      </div>
    </div>
  );
}

ProfileCard.propTypes = {
  name: PropTypes.string.isRequired,
  role: PropTypes.string,
  location: PropTypes.string,
  bio: PropTypes.string,
  avatarUrl: PropTypes.string,
  skills: PropTypes.arrayOf(PropTypes.string),
  stats: PropTypes.shape({ followers: PropTypes.number, projects: PropTypes.number }),
  links: PropTypes.object,
};

ProfileCard.defaultProps = {
  role: "",
  location: "",
  bio: "",
  avatarUrl: "https://via.placeholder.com/100",
  skills: [],
  stats: { followers: 0, projects: 0 },
  links: {},
};

export default function App() {
  return (
    <div className="container">
      <ProfileCard
        name="Raju Kumar"
        role="Computer Science Engineering Student"
        location="Bhopal, India"
        bio="Learning C++ and React, building projects."
        skills={["C++", "React", "CAD"]}
        stats={{ followers: 1200, projects: 10 }}
        links={{ website: "https://example.com", github: "https://github.com/example" }}
      />
    </div>
  );
}

